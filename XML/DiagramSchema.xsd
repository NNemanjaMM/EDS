<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified"
    targetNamespace="https://www.tas.org/diagram-schema" vc:minVersion="1.1"
    xmlns:ds="https://www.tas.org/diagram-schema"
    xmlns:vc="http://www.w3.org/2007/XMLSchema-versioning">
    <xs:simpleType final="" name="typeId">
        <xs:restriction base="xs:int">
            <xs:totalDigits value="10"/>
            <xs:pattern value="[0-9]{10}"/>
        </xs:restriction>
    </xs:simpleType>
    <xs:complexType abstract="true" name="base">
        <xs:attribute form="unqualified" name="id" type="ds:typeId" use="required"/>
        <xs:attribute name="name" type="xs:string" use="optional"/>
    </xs:complexType>
    <xs:complexType abstract="true" name="element">
        <xs:complexContent>
            <xs:extension base="ds:base">
                <xs:choice maxOccurs="unbounded" minOccurs="0">
                    <xs:element maxOccurs="1" minOccurs="1" name="custom" type="ds:customAttribute"
                    />
                </xs:choice>
                <xs:attribute default="false" name="outOfScope" type="xs:boolean"/>
                <xs:attribute name="outOfScopeReason" type="xs:string"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType abstract="false" name="shape">
        <xs:complexContent>
            <xs:extension base="ds:base"/>
        </xs:complexContent>
    </xs:complexType>
    <xs:element name="diagram">
        <xs:complexType>
            <xs:choice maxOccurs="unbounded" minOccurs="0">
                <xs:group minOccurs="1" ref="ds:processes"/>
                <xs:group minOccurs="1" ref="ds:dataStores"/>
                <xs:group minOccurs="1" ref="ds:externalEntities"/>
                <xs:group minOccurs="1" ref="ds:flows"/>
                <xs:group ref="ds:boundaries"/>
                <xs:group ref="ds:sections"/>
                <xs:group ref="ds:custom"/>
            </xs:choice>
        </xs:complexType>
    </xs:element>
    <xs:complexType abstract="true" name="block">
        <xs:complexContent>
            <xs:extension base="ds:element">
                <xs:attributeGroup ref="ds:blockAttributes"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:attributeGroup name="blockAttributes">
        <xs:attribute name="trustSection" use="optional" type="ds:typeId"/>
    </xs:attributeGroup>
    <xs:complexType name="flow">
        <xs:complexContent>
            <xs:extension base="ds:element">
                <xs:choice maxOccurs="unbounded" minOccurs="0">
                    <xs:element maxOccurs="1" minOccurs="1" name="boundaryCross">
                        <xs:complexType>
                            <xs:attribute name="boundary" type="ds:typeId" use="required"/>
                        </xs:complexType>
                    </xs:element>
                </xs:choice>
                <xs:attribute name="source" type="ds:typeId" use="required"/>
                <xs:attribute name="destination" type="ds:typeId" use="required"/>
                <xs:attribute name="containsCookie" type="xs:boolean"/>
                <xs:attribute name="isDestinationAuthenicated" type="xs:boolean"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="process">
        <xs:complexContent>
            <xs:extension base="ds:block"/>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="dataStore">
        <xs:complexContent>
            <xs:extension base="ds:block"/>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="externalEntity">
        <xs:complexContent>
            <xs:extension base="ds:block"/>
        </xs:complexContent>
    </xs:complexType>
    <xs:complexType name="customAttribute">
        <xs:attribute name="title" type="xs:string" use="required"/>
        <xs:attribute name="value" type="xs:string" use="required"/>
        <xs:attribute fixed="ATTRIBUTE" form="unqualified" name="context" type="xs:string"
            use="required"/>
    </xs:complexType>
    <xs:complexType name="customElement">
        <xs:complexContent>
            <xs:extension base="ds:element">
                <xs:attribute name="title" type="xs:string" use="required"/>
                <xs:attribute form="unqualified" name="parent" use="required">
                    <xs:simpleType>
                        <xs:restriction base="xs:NMTOKENS">
                            <xs:enumeration value="OTHER"/>
                            <xs:enumeration value="PROCESS"/>
                            <xs:enumeration value="DATA_STORE"/>
                            <xs:enumeration value="EXTERNAL_ENTITY"/>
                            <xs:enumeration value="FLOW"/>
                        </xs:restriction>
                    </xs:simpleType>
                </xs:attribute>
                <xs:attribute fixed="ELEMENT" form="unqualified" name="context" type="xs:string"
                    use="required"/>
                <xs:attributeGroup ref="ds:blockAttributes"/>
                <xs:assert
                    test="((@parent='PROCESS' and @trustSection)
                    or (@parent='DATA_STORE' and @trustSection)
                    or (@parent='EXTERNAL_ENTITY' and @trustSection)
                    or (@parent='OTHER' and not(@trustSection))
                    or (@parent='FLOW' and not(@trustSection)))"
                />
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>
    <xs:group name="flows">
        <xs:sequence>
            <xs:element maxOccurs="1" minOccurs="1" name="flow" type="ds:flow"/>
        </xs:sequence>
    </xs:group>
    <xs:group name="processes">
        <xs:sequence>
            <xs:element maxOccurs="1" minOccurs="1" name="webApplication" type="ds:process"/>
        </xs:sequence>
    </xs:group>
    <xs:group name="dataStores">
        <xs:sequence>
            <xs:element maxOccurs="1" minOccurs="1" name="SQLdatabase" type="ds:dataStore"/>
        </xs:sequence>
    </xs:group>
    <xs:group name="externalEntities">
        <xs:sequence>
            <xs:element maxOccurs="1" minOccurs="1" name="browserClient" type="ds:externalEntity"/>
        </xs:sequence>
    </xs:group>
    <xs:group name="sections">
        <xs:sequence>
            <xs:element maxOccurs="1" minOccurs="1" name="trustSection" type="ds:shape"/>
        </xs:sequence>
    </xs:group>
    <xs:group name="boundaries">
        <xs:sequence>
            <xs:element maxOccurs="1" minOccurs="1" name="internetBoundary" type="ds:shape"/>
        </xs:sequence>
    </xs:group>
    <xs:group name="custom">
        <xs:sequence>
            <xs:element name="custom" type="ds:customElement"> </xs:element>
        </xs:sequence>
    </xs:group>
</xs:schema>
